{
  "workbench.colorTheme": "Aura Dracula Spirit (Soft)",
  "workbench.activityBar.location": "default",    // hidden
  "workbench.editor.showTabs": "multiple",    // single
  "workbench.statusBar.visible": true,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": true,   // false
  "workbench.tree.enableStickyScroll": false, // false
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.tree.indent": 8,
  "workbench.sideBar.location": "left",  // right
  "workbench.iconTheme": "material-icon-theme",

  "breadcrumbs.enabled": false,     // true

  "material-icon-theme.hidesExplorerArrows": true,  // false

  "explorer.compactFolders": false,   // true
  "explorer.confirmDragAndDrop": true,
  "explorer.confirmDelete": true,
  "explorer.decorations.badges": true,
  "git.decorations.enabled": true,

  "window.zoomLevel": 0,

  "editor.minimap.enabled": true,
  "editor.multiCursorModifier": "alt",
  "editor.fontFamily": "D2Coding ligature",
  "editor.fontSize": 14,
  "editor.fontLigatures": false,
  "editor.lineHeight": 0,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.stickyScroll.enabled": false,
  "editor.colorDecorators": false,
  "editor.codeLens": true,       // package.json debug button 활성화 -> true
  "editor.links": false,
  "editor.matchBrackets": "always",
  "editor.parameterHints.enabled": true,    // 단축키로 컨트롤 하기 가능
  "editor.lightbulb.enabled": "onCode", // 단축키로 컨트롤 하기 가능
  "editor.hover.enabled": true,
  "files.trimTrailingWhitespace": false,
  "files.insertFinalNewline": true,
  "scm.diffDecorations": "none",    // 다른 형상관리 툴을 사용하고 있기 때문에 none으로 설정
  "editor.lineNumbers": "on",
  "editor.tabSize": 4,
  "editor.detectIndentation": true,
  "editor.showFoldingControls": "never",
  "editor.guides.indentation": false,
  "editor.renderWhitespace": "selection",
  "editor.renderLineHighlight": "line",
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": false,
  "editor.tabCompletion": "on", // tab을 툴러 자동완성
}
